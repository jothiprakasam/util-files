{
  "apiVersion": "kubevirt.io/v1",
  "kind": "VirtualMachine",
  "metadata": {
    "name": "windows-vm-nopersist",
    "namespace": "default",
    "labels": {
      "owner": "jothi",
      "source": "iso-reuse",
      "kubevirt.io/domain": "windows-vm-nopersist"
    }
  },
  "spec": {
    "runStrategy": "Manual",
    "template": {
      "metadata": {
        "labels": {
          "kubevirt.io/domain": "windows-vm-nopersist"
        }
      },
      "spec": {
        "domain": {
          "firmware": {
            "bootloader": {
              "efi": {}
            }
          },
          "features": {
            "smm": {
              "enabled": true
            }
          },
          "cpu": {
            "cores": 2
          },
          "resources": {
            "requests": {
              "memory": "6Gi"
            }
          },
          "devices": {
            "disks": [
              {
                "name": "cdrom-disk",
                "cdrom": {
                  "bus": "sata"
                },
                "bootOrder": 1
              },
              {
                "name": "rootdisk",
                "disk": {
                  "bus": "virtio"
                },
                "bootOrder": 2
              },
              {
                "name": "virtio-disk",
                "cdrom": {
                  "bus": "sata"
                }
              }
            ],
            "interfaces": [
              {
                "name": "default",
                "masquerade": {}
              }
            ]
          }
        },
        "networks": [
          {
            "name": "default",
            "pod": {}
          }
        ],
        "volumes": [
          {
            "name": "cdrom-disk",
            "persistentVolumeClaim": {
              "claimName": "windows-iso"
            }
          },
          {
            "name": "rootdisk",
            "persistentVolumeClaim": {
              "claimName": "jothi-lite-disk"
            }
          },
          {
            "name": "virtio-disk",
            "persistentVolumeClaim": {
              "claimName": "virtio-iso"
            }
          }
        ]
      }
    }
  }
}
