{
  "apiVersion": "kubevirt.io/v1",
  "kind": "VirtualMachine",
  "metadata": {
    "name": "win10-lab",
    "namespace": "default"
  },
  "spec": {
    "running": false,
    "template": {
      "metadata": {
        "labels": {
          "kubevirt.io/domain": "win10-lab"
        }
      },
      "spec": {
        "domain": {
          "devices": {
            "disks": [
              {
                "name": "rootdisk",
                "disk": {
                  "bus": "virtio"
                }
              }
            ]
          },
          "resources": {
            "requests": {
              "memory": "2Gi"
            }
          }
        },
        "volumes": [
          {
            "name": "rootdisk",
            "containerDisk": {
              "image": "kubevirt/windows-container-disk-demo"
            }
          }
        ]
      }
    }
  }
}
